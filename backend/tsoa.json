{
	"entryFile": "./src/index.ts",
	"noImplicitAdditionalProperties": "silently-remove-extras",
	"controllerPathGlobs": ["./src/**/*Controller.ts"],
	"spec": {
		"outputDirectory": "./",
		"specVersion": 3,
		"securityDefinitions": {
			"bearer_token": {
				"type": "http",
				"scheme": "bearer"
			},
			"bearer_token_optional": {
				"type": "http",
				"scheme": "bearer"
			}
		}
	},
	"routes": {
		"authenticationModule": "./src/auth.ts",
		"routesDir": "./src"
	}
}
